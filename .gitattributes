# Git LFS configuration for upload files
uploads/**/*.jpg filter=lfs diff=lfs merge=lfs -text
uploads/**/*.jpeg filter=lfs diff=lfs merge=lfs -text
uploads/**/*.png filter=lfs diff=lfs merge=lfs -text
uploads/**/*.gif filter=lfs diff=lfs merge=lfs -text
uploads/**/*.bmp filter=lfs diff=lfs merge=lfs -text
uploads/**/*.webp filter=lfs diff=lfs merge=lfs -text

# Exclude temp and backup folders
uploads/temp/** filter=lfs diff=lfs merge=lfs -text
uploads/backup/** filter=lfs diff=lfs merge=lfs -text